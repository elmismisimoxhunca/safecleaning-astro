---
interface Props {
  title: string;
  description: string;
  href: string;
}

const { title, description, href } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition transform hover:scale-105">
  <h3 class="text-xl font-bold text-primary mb-4">{title}</h3>
  <p class="text-gray-600 mb-6">{description}</p>
  <a href={href} class="text-accent font-bold hover:text-secondary transition inline-flex items-center gap-2">
    Más información
    <span>→</span>
  </a>
</div>
