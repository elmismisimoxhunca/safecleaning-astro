---
interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="text-center">
  <div class="text-4xl font-bold text-primary mb-4">{icon}</div>
  <h3 class="font-bold text-lg mb-2">{title}</h3>
  <p class="text-gray-600">{description}</p>
</div>
